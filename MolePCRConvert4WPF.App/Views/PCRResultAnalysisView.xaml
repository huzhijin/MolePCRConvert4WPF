<UserControl x:Class="MolePCRConvert4WPF.App.Views.PCRResultAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views"
             xmlns:viewmodels="clr-namespace:MolePCRConvert4WPF.App.ViewModels"
             xmlns:extensions="clr-namespace:MolePCRConvert4WPF.App.Extensions"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{d:DesignInstance Type=viewmodels:PCRResultAnalysisViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题区域 -->
        <TextBlock Grid.Row="0" Text="PCR结果分析" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                   Margin="0,0,0,20"/>
        
        <!-- 分析结果操作按钮 -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,10">
            <Button Content="刷新分析" Margin="0,0,10,0" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="120"
                    Command="{Binding RefreshCommand}"/>
            <Button Content="导出结果" Margin="0,0,10,0" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="120" 
                    Command="{Binding ExportCommand}"/>
            <Button Content="生成患者报告" Margin="0,0,10,0" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="120"
                    Command="{Binding GeneratePatientReportCommand}"/>
            <Button Content="生成整板报告" Margin="0,0,10,0" 
                    Style="{StaticResource MaterialDesignRaisedButton}" Width="120"
                    Command="{Binding GeneratePlateReportCommand}"/>
        </WrapPanel>
        
        <!-- 数据表格区域 -->
        <DataGrid Grid.Row="2" Margin="0,10,0,10"
                  ItemsSource="{Binding ResultItems}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  CanUserResizeColumns="True"
                  materialDesign:DataGridAssist.CellPadding="8 4 8 4"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8 4 8 4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="患者姓名" Binding="{Binding PatientName}" Width="120"/>
                <DataGridTextColumn Header="病历号" Binding="{Binding PatientCaseNumber}" Width="120"/>
                <DataGridTextColumn Header="孔位" Binding="{Binding WellPosition}" Width="80"/>
                <DataGridTextColumn Header="荧光通道" Binding="{Binding Channel}" Width="100"/>
                <DataGridTextColumn Header="靶标名称" Binding="{Binding TargetName}" Width="150"/>
                <DataGridTextColumn Header="CT值" Binding="{Binding CtValue}" Width="80"/>
                <DataGridTextColumn Header="浓度" Binding="{Binding Concentration}" Width="100"/>
                <DataGridTemplateColumn Header="检测结果" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Result}" 
                                       Foreground="{Binding Converter={StaticResource ResultForegroundConverter}}"
                                       FontWeight="{Binding IsPositive, Converter={StaticResource BooleanToFontWeightConverter}}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- 状态信息区域 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="{Binding StatusMessage}" Margin="0,10,20,0"/>
            <TextBlock Text="{Binding TotalCount, StringFormat={}总记录数: {0}}" Margin="0,10,20,0"/>
            <TextBlock Text="{Binding PatientCount, StringFormat={}患者数: {0}}" Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- 加载指示器 -->
        <Grid Grid.Row="0" Grid.RowSpan="4" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="60" Height="60" 
                             Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                <TextBlock Text="正在处理数据..." Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:BooleanToFontWeightConverter x:Key="BooleanToFontWeightConverter"/>
        <local:ResultForegroundConverter x:Key="ResultForegroundConverter"/>
    </UserControl.Resources>
</UserControl> 