<UserControl x:Class="MolePCRConvert4WPF.App.Views.SampleAnalysis.SampleAnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views.SampleAnalysis"
             xmlns:vm="clr-namespace:MolePCRConvert4WPF.App.ViewModels"
             xmlns:models="clr-namespace:MolePCRConvert4WPF.Core.Models;assembly=MolePCRConvert4WPF.Core"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:MolePCRConvert4WPF.App.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:SampleAnalysisViewModel, IsDesignTimeCreatable=False}" 
             d:DesignHeight="700" d:DesignWidth="900"
             FocusManager.FocusedElement="{Binding ElementName=WellsListView}"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <!-- Converter to change background or border based on IsSelected -->
        <converters:BoolToBrushConverter x:Key="SelectedBrushConverter" 
                                    TrueBrush="{DynamicResource PrimaryHueMidBrush}" 
                                    FalseBrush="Transparent"/>
        <converters:BoolToBrushConverter x:Key="SelectedForegroundConverter" 
                                    TrueBrush="{DynamicResource PrimaryHueMidForegroundBrush}" 
                                    FalseBrush="{DynamicResource MaterialDesignBodyBrush}"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Define the SequenceConverter as a resource -->
        <converters:SequenceConverter x:Key="ColumnHeaderConverter" Start="1"/>

        <!-- Define PlateRows as a resource (assuming 8 rows A-H) -->
        <x:Array x:Key="PlateRows" Type="sys:String" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:String>A</sys:String>
            <sys:String>B</sys:String>
            <sys:String>C</sys:String>
            <sys:String>D</sys:String>
            <sys:String>E</sys:String>
            <sys:String>F</sys:String>
            <sys:String>G</sys:String>
            <sys:String>H</sys:String>
        </x:Array>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>
            
            <!-- 孔板视图区域 -->
            <GroupBox Grid.Column="0" Header="孔板视图" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左上角空白区域 -->
                    <Border Grid.Row="0" Grid.Column="0" Background="Transparent"/>
                    
                    <!-- 列标签 - 上方的数字 -->
                    <UniformGrid Grid.Row="0" Grid.Column="1" Rows="1" Columns="{Binding PlateColumns}">
                        <TextBlock Text="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="4" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="6" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="7" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="8" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="9" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="10" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="11" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="12" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </UniformGrid>
                    
                    <!-- 行标签 - 左侧的字母 -->
                    <UniformGrid Grid.Row="1" Grid.Column="0" Rows="8" Columns="1">
                        <TextBlock Text="A" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="B" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="C" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="D" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="E" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="F" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="G" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="H" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </UniformGrid>
                    
                    <!-- 孔位网格 -->
                    <ListView x:Name="WellsListView" Grid.Row="1" Grid.Column="1" 
                              ItemsSource="{Binding WellLayouts}"
                              SelectionMode="Extended" 
                              Background="Transparent" 
                              BorderThickness="0"
                              PreviewMouseLeftButtonDown="WellsListView_PreviewMouseLeftButtonDown"
                              MouseMove="WellsListView_MouseMove"
                              PreviewMouseLeftButtonUp="WellsListView_PreviewMouseLeftButtonUp"
                              PreviewKeyDown="WellsListView_PreviewKeyDown"
                              MouseRightButtonUp="WellsListView_MouseRightButtonUp"
                              MouseDoubleClick="WellsListView_MouseDoubleClick">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding PlateColumns}" Rows="8"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="1"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Focusable" Value="True"/>
                                <Setter Property="IsTabStop" Value="True"/>
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="models:WellLayout">
                                <Border BorderBrush="Black" BorderThickness="1"
                                        Tag="{Binding}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <!-- DataTrigger for Border Selection Style -->
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=IsSelected}" Value="True">
                                                    <Setter Property="BorderBrush" Value="Blue"/>
                                                    <Setter Property="BorderThickness" Value="3"/>
                                                    <Setter Property="Background" Value="LightBlue"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="WellNameText" Text="{Binding WellName}" FontSize="12" TextAlignment="Center" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                     <Setter Property="Foreground" Value="Black"/>
                                                 </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock x:Name="PatientInfoText" Text="{Binding PatientName}" FontSize="10" TextAlignment="Center"
                                                   TextWrapping="Wrap" Margin="2">
                                             <TextBlock.Style>
                                                 <Style TargetType="TextBlock">
                                                     <Setter Property="Foreground" Value="DarkGray"/>
                                                 </Style>
                                             </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            
            <!-- 患者信息区域 -->
            <GroupBox Grid.Column="2" Header="患者信息" Margin="5,0,0,0">
    <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 患者列表 -->
                    <ListView ItemsSource="{Binding Patients}" 
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Grid.Row="0" Margin="5">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="患者" DisplayMemberBinding="{Binding Name}" Width="100"/>
                                <GridViewColumn Header="病历号" DisplayMemberBinding="{Binding CaseNumber}" Width="120"/>
                                <GridViewColumn Header="所属孔位" DisplayMemberBinding="{Binding AssociatedWells}" Width="Auto"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    
                    <!-- 按钮区域 -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Content="设置患者信息" 
                                Command="{Binding ShowSetPatientInfoDialogCommand}"
                                Width="120" Height="35" Margin="5"/>
                        <Button Content="清除患者信息" 
                                Command="{Binding ClearPatientInfoCommand}" 
                                Width="120" Height="35" Margin="5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
        
        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="应用" Command="{Binding ApplyCommand}" Width="100" Height="30"/>
        </StackPanel>
        
        <!-- 患者信息编辑对话框 -->
        <Border Grid.RowSpan="2" 
                Background="{DynamicResource MaterialDesignOverlayBackground}" 
                CornerRadius="3" MinWidth="300" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Panel.ZIndex="1" 
                Visibility="{Binding IsPatientInfoDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
            <materialDesign:Card Padding="20">
                <StackPanel>
                    <TextBlock Text="编辑患者信息" Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,10"/>
                    <TextBlock Text="当前选择区域:" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    <ScrollViewer MaxHeight="60" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                         <TextBlock Text="{Binding DialogSelectedWellsDisplay}" TextWrapping="Wrap" />
                    </ScrollViewer>
                    
                    <TextBox Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="姓名"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding DialogPatientName, UpdateSourceTrigger=PropertyChanged}"/>
                             
                    <TextBox Margin="0,16,0,0"
                             materialDesign:HintAssist.Hint="病历号"
                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                             Text="{Binding DialogPatientCaseNumber, UpdateSourceTrigger=PropertyChanged}"/>
                             
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="取消" Style="{DynamicResource MaterialDesignTextButton}" Command="{Binding CancelSetPatientInfoCommand}" Margin="0,0,8,0"/>
                        <Button Content="确定" Style="{DynamicResource MaterialDesignRaisedButton}" Command="{Binding ConfirmSetPatientInfoCommand}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </Border>
    </Grid>
</UserControl> 