<UserControl x:Class="MolePCRConvert4WPF.App.Views.ReportTemplateDesignerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views"
             xmlns:reoGrid="clr-namespace:unvell.ReoGrid;assembly=unvell.ReoGrid"
             xmlns:vm="clr-namespace:MolePCRConvert4WPF.App.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ReportTemplateDesignerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="报告模板设计器" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,16" />

        <!-- 工具栏 -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16" UniformCornerRadius="4">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                        ToolTip="保存当前模板"
                        Command="{Binding SaveCommand}"
                        Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Margin="0,0,8,0" />
                        <TextBlock Text="保存" />
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                        ToolTip="另存为新模板"
                        Command="{Binding SaveAsCommand}"
                        Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSaveAll" Margin="0,0,8,0" />
                        <TextBlock Text="另存为" />
                    </StackPanel>
                </Button>
                
                <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                        ToolTip="创建新模板"
                        Command="{Binding NewTemplateCommand}"
                        Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" Margin="0,0,8,0" />
                        <TextBlock Text="新建" />
                    </StackPanel>
                </Button>
                
                <!-- 当前模板信息 -->
                <TextBlock VerticalAlignment="Center" Margin="10,0,5,0">
                    <Run Text="当前模板: " FontWeight="SemiBold"/>
                    <Run Text="{Binding CurrentTemplate.Name, Mode=OneWay, FallbackValue='无'}" />
                    <Run Text="  " />
                </TextBlock>
                
                <!-- 修改标记，单独放 -->
                <TextBlock Text="*" 
                           Foreground="Red" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Visibility="{Binding IsModified, Converter={StaticResource BooleanToVisibilityConverter}}" />
                
                <!-- 加载指示器 -->
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                             Value="0" IsIndeterminate="True" 
                             Width="24" Height="24" 
                             Margin="16,0,0,0"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </materialDesign:Card>

        <!-- ReoGrid控件 -->
        <Border Grid.Row="2" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
            <Grid Background="White">
                <ContentControl>
                    <reoGrid:ReoGridControl x:Name="ReoGridControl" />
                </ContentControl>
            </Grid>
        </Border>

        <!-- 状态栏 -->
        <materialDesign:Card Grid.Row="3" Padding="8 4" Margin="0,16,0,0" UniformCornerRadius="4">
            <TextBlock Text="{Binding StatusMessage}" Margin="8,4" />
        </materialDesign:Card>
    </Grid>
</UserControl> 