<Window x:Class="MolePCRConvert4WPF.App.Views.ReportPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="报告预览" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16" UniformCornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="BtnExport" Style="{StaticResource MaterialDesignRaisedButton}" 
                            Click="BtnExport_Click" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileExportOutline" Margin="0,0,8,0" />
                            <TextBlock Text="导出Excel" />
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="BtnPrint" Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="BtnPrint_Click" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Printer" Margin="0,0,8,0" />
                            <TextBlock Text="打印" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <TextBlock Grid.Column="2" VerticalAlignment="Center">
                    <Run Text="报告类型: " FontWeight="SemiBold"/>
                    <Run x:Name="RunReportType" Text="患者报告"/>
                </TextBlock>
            </Grid>
        </materialDesign:Card>

        <!-- 预览内容 - WebBrowser来显示HTML预览 -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <WebBrowser x:Name="WebPreview" Height="Auto" Width="Auto" />
            </ScrollViewer>
        </Border>

        <!-- 分页控制 -->
        <materialDesign:Card Grid.Row="2" Margin="0,16,0,0" Padding="8" UniformCornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnPrevPage" Style="{StaticResource MaterialDesignIconButton}" 
                            Click="BtnPrevPage_Click">
                        <materialDesign:PackIcon Kind="ChevronLeft" Width="24" Height="24"/>
                    </Button>
                    
                    <TextBlock VerticalAlignment="Center" Margin="16,0">
                        <Run Text="第 "/>
                        <Run x:Name="RunCurrentPage" Text="1"/>
                        <Run Text=" 页，共 "/>
                        <Run x:Name="RunTotalPages" Text="1"/>
                        <Run Text=" 页"/>
                    </TextBlock>
                    
                    <Button x:Name="BtnNextPage" Style="{StaticResource MaterialDesignIconButton}"
                            Click="BtnNextPage_Click">
                        <materialDesign:PackIcon Kind="ChevronRight" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
                
                <TextBlock Grid.Column="2" x:Name="TxtPatientInfo" 
                           HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                    <Run Text="患者: "/>
                    <Run x:Name="RunPatientName" Text=""/>
                </TextBlock>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window> 