<UserControl x:Class="MolePCRConvert4WPF.App.Views.AnalysisMethodConfig.ExcelAnalysisMethodConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views.AnalysisMethodConfig"
             xmlns:vm="clr-namespace:MolePCRConvert4WPF.App.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ExcelAnalysisMethodConfigViewModel}"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Add InverseBooleanConverter if needed for IsEnabled bindings -->
        <!-- <localConverters:InverseBooleanConverter x:Key="InverseBooleanConverter" /> -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Removed extra bottom row for Close button, can be handled by parent window -->
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="分析方法配置" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="16,16,16,8" HorizontalAlignment="Center"/>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240" MinWidth="200" MaxWidth="400"/> <!-- Adjusted width -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Excel File List -->
            <Border Grid.Column="0" Margin="0,0,8,0" 
                    BorderThickness="1" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    CornerRadius="4"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="分析方法列表" 
                           Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                           Margin="0,0,0,8"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
                    
                    <ListBox Grid.Row="1" 
                         ItemsSource="{Binding ExcelFiles}"
                         SelectedItem="{Binding SelectedExcelFile}"
                         DisplayMemberPath="DisplayName"
                         Margin="0,0,0,8"
                         BorderThickness="0"
                         Background="Transparent">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Margin" Value="0,1"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="新建方法" Command="{Binding CreateNewFileCommand}"/>
                                <MenuItem Header="删除方法" Command="{Binding DeleteFileCommand}"/>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                    </ListBox>
                    
                    <Grid Grid.Row="2">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="新建" Width="70" Margin="0,0,4,0" 
                                Command="{Binding CreateNewFileCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            <Button Content="刷新" Width="70" Margin="4,0,0,0" 
                                Command="{Binding RefreshFilesCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Right: Configuration DataGrid -->
            <Border Grid.Column="1" Margin="8,0,0,0" 
                    BorderThickness="1" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" 
                    CornerRadius="4"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="配置详情" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBlock Text=" (当前文件: " Margin="8,0,0,0" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                            <TextBlock Text="{Binding CurrentFileName, FallbackValue='未选择'}" Style="{StaticResource MaterialDesignCaptionTextBlock}" FontWeight="Bold"/>
                            <TextBlock Text=")" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="导入" Width="70" Margin="0,0,8,0" 
                                Command="{Binding ImportFileCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            <Button Content="导出" Width="70" Margin="0,0,0,0" 
                                Command="{Binding ExportFileCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </StackPanel>
                    </Grid>
                    
                    <DataGrid Grid.Row="1" 
                          x:Name="ConfigDataGrid"
                          ItemsSource="{Binding MethodConfiguration}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="True" 
                          CanUserDeleteRows="True"
                          CanUserReorderColumns="False"
                          IsReadOnly="False"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow"
                          HeadersVisibility="All"
                          materialDesign:DataGridAssist.CellPadding="8 4 8 4"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8 4 8 4"
                          BorderThickness="0"
                          Margin="0,0,0,8">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="添加新行" Command="{Binding AddNewRowCommand}"/>
                                <MenuItem Header="删除选中行" Command="{Binding DeleteSelectedRowsCommand}" 
                                      InputGestureText="Delete"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.InputBindings>
                            <KeyBinding Key="Delete" Command="{Binding DeleteSelectedRowsCommand}" />
                        </DataGrid.InputBindings>
                        <DataGrid.Columns>
                            <!-- Columns matching the AnalysisMethodRule properties -->
                            <materialDesign:DataGridTextColumn Header="序号" Binding="{Binding Index, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="60" />
                            <materialDesign:DataGridTextColumn Header="孔位" Binding="{Binding WellPosition, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="80" />
                            <materialDesign:DataGridTextColumn Header="荧光通道" Binding="{Binding Channel, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="100" />
                            <materialDesign:DataGridTextColumn Header="种名" Binding="{Binding SpeciesName, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="*" />
                            <materialDesign:DataGridTextColumn Header="阳性判定公式" Binding="{Binding JudgeFormula, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="2*" />
                            <materialDesign:DataGridTextColumn Header="浓度计算公式" Binding="{Binding ConcentrationFormula, UpdateSourceTrigger=PropertyChanged}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" IsReadOnly="False" Width="2*" />
                        </DataGrid.Columns>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                                <Setter Property="IsEditing" Value="{Binding IsSelected, RelativeSource={RelativeSource Self}}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="保存" Width="80" 
                            Command="{Binding SaveConfigurationCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#88000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="100">
             <materialDesign:Card VerticalAlignment="Center" HorizontalAlignment="Center" Padding="16">
                 <StackPanel Orientation="Horizontal">
                     <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="24" Height="24" Margin="0,0,16,0"/>
                     <TextBlock Text="处理中..." VerticalAlignment="Center" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                 </StackPanel>
             </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl> 