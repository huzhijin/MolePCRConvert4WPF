<UserControl x:Class="MolePCRConvert4WPF.App.Views.AnalysisMethodConfig.ExcelAnalysisMethodConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Views.AnalysisMethodConfig"
             xmlns:vm="clr-namespace:MolePCRConvert4WPF.App.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:ExcelAnalysisMethodConfigViewModel}"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- Add InverseBooleanConverter if needed for IsEnabled bindings -->
        <!-- <localConverters:InverseBooleanConverter x:Key="InverseBooleanConverter" /> -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- Removed extra bottom row for Close button, can be handled by parent window -->
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="分析方法配置" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="16,16,16,8" HorizontalAlignment="Center"/>
        
        <!-- Method Folder Selection Area -->
        <Grid Grid.Row="1" Margin="16,8,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="方法文件夹:" VerticalAlignment="Center" Margin="0,0,8,0" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" 
                       Text="{Binding MethodFolderPath, FallbackValue='请选择文件夹...'}" 
                       TextTrimming="CharacterEllipsis" ToolTip="{Binding MethodFolderPath}"/>
            <Button Grid.Column="2" Content="浏览..." Padding="10,5" Margin="8,0,0,0" 
                    Command="{Binding BrowseFolderCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </Grid>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" MinWidth="180" MaxWidth="400"/> <!-- Adjusted width -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left: Excel File List -->
            <Grid Grid.Column="0" Margin="0,0,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="分析方法列表" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
                
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding ExcelFiles}"
                         SelectedItem="{Binding SelectedExcelFile}"
                         DisplayMemberPath="DisplayName"
                         Margin="0,0,0,8"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource MaterialDesignDivider}">
                    <!-- Add ItemContainerStyle for selection visuals if desired -->
                </ListBox>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="新建" Width="70" Margin="0,0,4,0" 
                            Command="{Binding CreateNewFileCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    <Button Content="刷新" Width="70" Margin="4,0,0,0" 
                            Command="{Binding RefreshFilesCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"/>
                </StackPanel>
            </Grid>
            
            <!-- Right: Configuration DataGrid -->
            <Grid Grid.Column="1" Margin="8,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="配置详情" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                    <TextBlock Text=" (当前文件: " Margin="8,0,0,0" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                    <TextBlock Text="{Binding CurrentFileName, FallbackValue='未选择'}" Style="{StaticResource MaterialDesignCaptionTextBlock}" FontWeight="Bold"/>
                    <TextBlock Text=")" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                </StackPanel>
                
                <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding MethodConfiguration}" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="True" 
                          CanUserDeleteRows="True"
                          HeadersVisibility="Column"
                          materialDesign:DataGridAssist.CellPadding="8 4 8 4"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8 4 8 4"
                          BorderThickness="1"
                          BorderBrush="{DynamicResource MaterialDesignDivider}"
                          Margin="0,0,0,8">
                    <DataGrid.Columns>
                        <!-- Columns matching the AnalysisMethodRule properties -->
                        <materialDesign:DataGridTextColumn Header="序号" Binding="{Binding Index}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="60" />
                        <materialDesign:DataGridTextColumn Header="孔位" Binding="{Binding WellPosition}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="80" />
                        <materialDesign:DataGridTextColumn Header="荧光通道" Binding="{Binding Channel}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="100" />
                        <materialDesign:DataGridTextColumn Header="种名" Binding="{Binding SpeciesName}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="*" />
                        <materialDesign:DataGridTextColumn Header="阳性判定公式" Binding="{Binding JudgeFormula}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="2*" />
                        <materialDesign:DataGridTextColumn Header="浓度计算公式" Binding="{Binding ConcentrationFormula}" EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" Width="2*" />
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="保存" Width="80" 
                            Command="{Binding SaveConfigurationCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" Background="#88000000" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="100">
             <materialDesign:Card VerticalAlignment="Center" HorizontalAlignment="Center" Padding="16">
                 <StackPanel Orientation="Horizontal">
                     <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="24" Height="24" Margin="0,0,16,0"/>
                     <TextBlock Text="处理中..." VerticalAlignment="Center" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                 </StackPanel>
             </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl> 