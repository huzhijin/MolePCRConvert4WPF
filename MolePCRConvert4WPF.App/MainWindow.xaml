<metro:MetroWindow x:Class="MolePCRConvert4WPF.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MolePCRConvert4WPF.App"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="PCR结果分析与报告生成系统" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="1">
    
    <metro:MetroWindow.RightWindowCommands>
        <metro:WindowCommands>
            <Button Content="设置" />
            <Button Content="帮助" />
        </metro:WindowCommands>
    </metro:MetroWindow.RightWindowCommands>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- 顶部导航菜单 -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <DockPanel>
                <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges">
                    <ListBox>
                        <ListBoxItem Content="个人信息" />
                        <ListBoxItem Content="设置" />
                        <ListBoxItem Content="退出" />
                    </ListBox>
                </materialDesign:PopupBox>
                <StackPanel Orientation="Horizontal">
                    <ToggleButton Style="{DynamicResource MaterialDesignHamburgerToggleButton}" IsChecked="True" x:Name="MenuToggleButton" />
                    <TextBlock VerticalAlignment="Center" Margin="16 0 0 0" Text="PCR结果分析与报告生成系统" />
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>
        
        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- 左侧导航菜单 -->
            <materialDesign:DrawerHost Grid.Column="0" IsLeftDrawerOpen="{Binding ElementName=MenuToggleButton, Path=IsChecked}">
                <materialDesign:DrawerHost.LeftDrawerContent>
                    <DockPanel MinWidth="220">
                        <ListBox x:Name="NavListBox" DockPanel.Dock="Top" Margin="0 16 0 16" SelectedIndex="0">
                            <ListBoxItem Tag="DataInput">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Upload" Width="24" Height="24" VerticalAlignment="Center" />
                                    <TextBlock Text="数据输入" Margin="16,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem Tag="SampleAnalysis">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewGridOutline" Width="24" Height="24" VerticalAlignment="Center" />
                                    <TextBlock Text="样本命名" Margin="16,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem Tag="ExcelAnalysisMethod">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartBarStacked" Width="24" Height="24" VerticalAlignment="Center" />
                                    <TextBlock Text="分析方法配置" Margin="16,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem Tag="PCRResultAnalysis">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" VerticalAlignment="Center" />
                                    <TextBlock Text="PCR结果分析" Margin="16,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </DockPanel>
                </materialDesign:DrawerHost.LeftDrawerContent>
            </materialDesign:DrawerHost>
            
            <!-- 主内容区域 -->
            <ContentControl Grid.Column="1" x:Name="MainContent">
                <!-- 欢迎页面或默认页面的内容 -->
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="24" TextAlignment="Center" Text="欢迎使用PCR结果分析与报告生成系统" />
                        <TextBlock FontSize="16" TextAlignment="Center" Margin="0 16 0 0" Text="请从左侧菜单选择操作" />
                    </StackPanel>
                </Grid>
            </ContentControl>
        </Grid>
    </Grid>
</metro:MetroWindow> 