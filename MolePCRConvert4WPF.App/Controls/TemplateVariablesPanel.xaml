<UserControl x:Class="MolePCRConvert4WPF.App.Controls.TemplateVariablesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MolePCRConvert4WPF.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    
    <UserControl.Resources>
        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="VariableItemStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="15,3,0,3"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <TreeView x:Name="VariablesTreeView" ItemsSource="{Binding VariablesByCategory}" BorderThickness="0">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Variables}">
                    <TextBlock Text="{Binding CategoryName}" FontWeight="Bold" Margin="0,5,0,2"/>
                    
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="{Binding DisplayName}" ToolTip="{Binding Description}" VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="1" Content="插入" Command="{Binding DataContext.InsertVariableCommand, ElementName=VariablesTreeView}" 
                                        CommandParameter="{Binding}" Width="40" Height="22" Margin="5,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl> 